<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TrashTec_MVVM_5B.ViewModels"
             x:Class="TrashTec_MVVM_5B.View.Recupararcontrasena"
             Title="">
    <ContentPage.BindingContext>
        <viewModels:RecuperarContrasenaViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="30" Spacing="15"
                     VerticalOptions="Start"
                     HorizontalOptions="Fill">

        <ImageButton Source="back.png"
                     HeightRequest="30"
                     WidthRequest="30"
                     BackgroundColor="Transparent"
                     HorizontalOptions="Start"/>

        <Label Text="TrashTec"
           FontSize="45"
           FontAttributes="Bold"
           TextColor="Blue"
           HorizontalOptions="Center"
           Margin="0,10,0,0"/>

        <Label Text="Recuperar contrase침a"
           FontSize="25"
           TextColor="Blue"
           HorizontalOptions="Center"
           Margin="0,0,0,30"/>

        <Label Text="Ingresa tu Email"
           FontSize="14"
           TextColor="Blue"
           Margin="0,0,0,5"/>
        <Frame BackgroundColor="#F3F4F6"
           CornerRadius="10"
           BorderColor="#D1D5DB"
           Padding="0"
           HeightRequest="50">
            <Entry Placeholder="example@email.com"
                   PlaceholderColor="Gray"
                   TextColor="Black"
                   Keyboard="Email"
                   BackgroundColor="Transparent"
                   FontSize="16"
                   Text="{Binding RecuperarContrasena.Email}" />
        </Frame>

        <Label Text="Ingresa el c칩digo de verificaci칩n enviado a tu email"
           FontSize="14"
           TextColor="Blue"
           Margin="0,10,0,5"/>
        <Frame BackgroundColor="#F3F4F6"
           CornerRadius="10"
           BorderColor="#D1D5DB"
           Padding="0"
           HeightRequest="50">
            <Entry Placeholder="A66-MT8"
                   PlaceholderColor="Gray"
                   TextColor="Black"
                   BackgroundColor="Transparent"
                   FontSize="16"
                   Text="{Binding RecuperarContrasena.CodigoVerificacion}" />
        </Frame>

        <Button Text="Recuperar Contrase침a"
                BackgroundColor="Blue"
                TextColor="White"
                HeightRequest="50"
                CornerRadius="10"
                FontAttributes="Bold"
                Margin="0,30,0,0"
                Command="{Binding RecuperarCommand}"/>
    </VerticalStackLayout>
</ContentPage>